<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ term.label.[0] }}</title>

  <link href="{{base}}/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
      body{
        padding-top: 65px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="{{base}}/" class="navbar-brand">schema.howarddierking.com</a>
        </div>
      </div>
    </nav>
    
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>{{term.label.[0]}}</h1>
          <p>{{term.comment.[0]}}</p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h3>Parent class(es)</h3>
          <ul>
            {{#each term.parentClasses}}
            <li><a href="{{href}}">{{label.[0]}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <!-- properties -->
          <!-- property | expected type | description -->
          <!-- properties from parent (recurse up) -->
          <h3>Properties</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Property</th>
                <th>Expected Type</th>
                <th>Description</th>
              </tr>
            </thead>

            <tr class="bg-info">
              <td colspan="3">Properties From <a href="{{term.href}}">{{term.label.[0]}}</a></td>
            </tr>
            <!-- Iterate This Class -->
            {{#each term.properties}}
            <tr>
              <td><a href="{{href}}">{{label.[0]}}</a></td>
              <td>
                {{#each expectedTypes}}
                <a href="{{href}}">{{label.[0]}}</a><br>
                {{/each}}
              </td>
              <td>{{comment.[0]}}</td>
            </tr>
            {{/each}}
            
            <!-- Iterate Parent Classes -->
            {{#each term.parentClasses}}
            <tr class="bg-info">
              <td colspan="3">Properties From <a href="{{href}}">{{label.[0]}}</a></td>
            </tr>
            {{#each properties}}
            <tr>
              <td><a href="{{href}}">{{label.[0]}}</a></td>
              <td>
                {{#each expectedTypes}}
                <a href="{{href}}">{{label.[0]}}</a>
                {{/each}}
              </td>
              <td>{{comment.[0]}}</td>
            </tr>
            {{/each}}
            {{/each}}

          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <!-- instances may appear as values for the following properties -->
          <!-- property | on types | description (of property) -->
          <h3>Instances may appear as values for the following properties</h3>
          <ul>
            {{#each term.valueFor}}
            <li><a href="{{href}}">{{label.[0]}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>

      <!-- more specific types -->
      <div class="row">
        <div class="col-md-12">              
          <h3>More specific types</h3>
          <ul>
            {{#each term.childClasses}}
            <li><a href="{{href}}">{{label.[0]}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>

    </div>

    <script src="{{base}}/components/jquery/dist/jquery.min.js"></script>
    <script src="{{base}}/components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
  </html>
